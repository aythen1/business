{
    "manifest_version": 2,
    "name": "Mi Extensión",
    "version": "1.0",
    "description": "Una extensión simple de Chrome",
    "permissions": [
        "nfc"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}